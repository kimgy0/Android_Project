<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/memberjoin"
        android:elevation="20dp"
        android:layout_marginBottom="20dp">

    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:text="그:숲의 가족이 되어주세요 !"
        android:gravity="center"
        android:elevation="20dp"
        android:textColor="#007f2f"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center">

    </TextView>


    <EditText
        android:id="@+id/joinusername"
        android:elevation="20dp"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="  아이디"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints"
        />

    <EditText
        android:id="@+id/joinpassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="  비밀번호"
        android:elevation="20dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/joinconfirmpassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="  비밀번호 확인"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:elevation="20dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/joinemail"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:hint="  이메일"
        android:elevation="20dp"
        android:background="@color/white"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/joinmember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#90EE90"
        android:textColor="#0a3711"
        android:elevation="20dp"
        android:text="회원가입"

        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=" "
        />




</LinearLayout>